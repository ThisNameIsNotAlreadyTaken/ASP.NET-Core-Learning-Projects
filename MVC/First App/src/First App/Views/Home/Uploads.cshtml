@{
    ViewData["Title"] = "Uploads";
}

<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<div class="container">
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadSmallSingleFile">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one file using this form:</p>
                <input type="file" name="file"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="UploadSingle"/>
            </div>
        </div>
    </form>
    <div class="clearfix"></div>
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadSmallMultipleFiles">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                <input type="file" name="files" multiple />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="UploadMultiple" />
            </div>
        </div>
    </form>
</div>